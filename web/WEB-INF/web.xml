    <filter>
        <filter-name>PerformanceFilter</filter-name>
        <filter-class>lw.web.PerformanceFilter</filter-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>效能監測</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>PerformanceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Performance2Filter</filter-name>
        <filter-class>lw.web.PerformanceFilter</filter-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>效能監測2</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Performance2Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ErrorFilter</filter-name>
        <filter-class>lw.web.PerformanceFilter</filter-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>Error監測</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ErrorFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.view</url-pattern>
        <url-pattern>*.php</url-pattern>
        <url-pattern>*.asp</url-pattern>
        <url-pattern>*.room</url-pattern>
        <dispatcher>ERROR</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    
    
    
